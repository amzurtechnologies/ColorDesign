            android:name="com.amzur.colordesign.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amzur.colordesign.NewFormula"
            android:label="@string/title_activity_new_formula" >
        </activity>
        <activity
            android:name="com.amzur.colordesign.ExistingClientActivity"
            android:label="@string/title_activity_existing_client" >
        </activity>
        <activity
            android:name="com.amzur.colordesign.NewCustomerActivity"
            android:label="@string/title_activity_new_customer" >
        </activity>
        <activity
            android:name="com.amzur.colordesign.ColorLevelActivity"
            android:label="@string/title_activity_color_level" >
        </activity>
        <activity
            android:name="com.amzur.colordesign.FormulaResultActivity"
            android:label="@string/title_activity_formula_result" >
        </activity>
    </application>

</manifest>
