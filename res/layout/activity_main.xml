<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/colorDesignMainScreenHeader"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/cdesign"
         />

    <TextView
        android:id="@+id/colorDesignlaunchImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/colorDesignMainScreenHeader"
        android:layout_marginLeft="51dp"
        android:background="@drawable/launchimage" />

    <Button
        android:id="@+id/mainScreenNewFormula"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="New Formula"
        android:textColor="#FFFFFF" 
        android:textStyle="bold"
        android:background="@drawable/button_shape"
         />

    <Button
        android:id="@+id/mainScreenExistingClient"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/mainScreenNewFormula"
        android:layout_below="@+id/mainScreenNewFormula"
        android:layout_marginTop="19dp"
        android:text="Existing Clients"
        android:textColor="#FFFFFF"
        android:textStyle="bold" 
        android:background="@drawable/button_shape"
        
        />
    
</RelativeLayout>